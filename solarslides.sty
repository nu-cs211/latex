%% Beamer setup
\usecolortheme{solarized}
\setbeamertemplate{frametitle}
{%
  \medskip
  \insertframetitle\par
  \smallskip
}
\setbeamertemplate{itemize item}{$\bullet$}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}[text line]{%
  \vbox to 1.25\baselineskip{%
    \hbox to \textwidth{%
      \sf\scriptsize
      \strut
      \hfill
      \color{solarizedRebase0}\insertframenumber
      \rlap{~%
        \color{solarizedBlue!40!solarizedRebase01}%
        (\textcolor{solarizedRebase01}{\thepage})%
      }%
      \hfill
    }%
  }%
}
